<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amlzq.androidinfo">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OSBuildActivity"
            android:label="OS build" />
        <activity
            android:name=".TelephonyActivity"
            android:label="Telephony" />
        <activity
            android:name=".DisplayActivity"
            android:configChanges="orientation"
            android:label="Display" />
        <activity
            android:name=".PackagesActivity"
            android:label="Packages"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".PkgDetailActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".StorageActivity"
            android:label="Storage" />
        <activity
            android:name=".NetworkActivity"
            android:label="Network" />
    </application>

</manifest>